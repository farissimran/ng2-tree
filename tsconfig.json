{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "module": "es2020",
    "useDefineForClassFields": false
  },
  "files": ["src/demo/main.ts", "src/demo/polyfills.ts"],
  "include": ["src/demo/**/*.d.ts"]
}
